@model ProductListViewModel
@{
    ViewData["Title"] = "Products";
}

<div class="card">
    <div class="card-header">
        <div class="flex items-center gap-md">
            <form method="get" class="flex gap-sm">
                <input type="text" name="search" value="@Model.SearchTerm" class="form-control" placeholder="Search products..." style="width: 250px;" />
                <select name="category" class="form-control" style="width: 180px;" onchange="this.form.submit()">
                    <option value="">All Categories</option>
                    @foreach (var cat in Model.Categories)
                    {
                        <option value="@cat" selected="@(Model.CategoryFilter == cat)">@cat</option>
                    }
                </select>
                <button type="submit" class="btn btn-secondary">Search</button>
            </form>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            + Add Product
        </a>
    </div>
    <div class="table-container">
        <table class="table">
            <thead>
                <tr>
                    <th>SKU</th>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Description</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model.Products)
                {
                    <tr id="product-@product.Id">
                        <td><code>@product.Sku</code></td>
                        <td class="font-medium">@product.Name</td>
                        <td><span class="badge badge-primary">@product.Category</span></td>
                        <td class="text-muted text-sm">@(product.Description ?? "-")</td>
                        <td class="table-actions">
                            <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-sm btn-secondary">Edit</a>
                            <form asp-action="Delete" asp-route-id="@product.Id" method="post" style="display: inline;"
                                  hx-delete="/products/delete/@product.Id"
                                  hx-target="#product-@product.Id"
                                  hx-swap="outerHTML"
                                  hx-confirm="Are you sure you want to delete this product?">
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    @if (!Model.Products.Any())
    {
        <div class="card-body">
            <div class="empty-state">
                <p>No products found</p>
                <a asp-action="Create" class="btn btn-primary mt-md">Add First Product</a>
            </div>
        </div>
    }
</div>
