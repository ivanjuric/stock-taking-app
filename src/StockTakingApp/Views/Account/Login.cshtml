@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <h1 class="login-title">Stock Taking App</h1>
            <p class="login-subtitle">Sign in to your account</p>
        </div>
        
        <form asp-action="Login" method="post" class="login-form">
            <input type="hidden" asp-for="ReturnUrl" />
            
            <div asp-validation-summary="ModelOnly" class="text-danger mb-md"></div>
            
            <div class="form-group">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" type="email" placeholder="you@example.com" autofocus />
                <span asp-validation-for="Email" class="form-error"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="form-error"></span>
            </div>
            
            <div class="form-group">
                <label class="checkbox-label">
                    <input asp-for="RememberMe" type="checkbox" />
                    Remember me
                </label>
            </div>
            
            <button type="submit" class="btn btn-primary login-btn btn-lg">Sign In</button>
        </form>
        
        <div class="mt-lg text-center text-sm text-muted">
            <p>Demo Accounts:</p>
            <p><strong>Admin:</strong> admin@demo.com / Demo123!</p>
            <p><strong>Worker:</strong> worker1@demo.com / Demo123!</p>
        </div>
    </div>
</div>
